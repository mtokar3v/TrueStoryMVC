@model IEnumerable<TrueStoryMVC.Models.Post>

<div class="row">
    @foreach (Post item in Model)
    {
        <div class="col-sm-2"><p>стрелочки</p></div>
        <div class="col-sm-10 border mt-1 p-1" style="background-color: white">
            <h2 class="text-secondary" style="display:inline; padding: 5% 0 0 5%">@item.Header</h2>
            <p-time post-time=@item.PostTime class="text-secondary ml-1" style="display: inline" />
            <p class=" text-justify w-100" style="padding: 3% 3% 0 3%">@item.Text</p>

            @{
                if (item.PostImages.Count != 0)
                {
                    foreach (ImageInfo img in item.PostImages)
                    {
                        <img class="w-100 mx-auto img-fluid" src="data:image/jpeg ;base64,@(Convert.ToBase64String(img.Data))" />
                    }
                }
            }

            @if (!String.IsNullOrEmpty(item.Tags))
            {
                string[] tags = item.Tags.Split(new char[] { ' ', ',', ';' });
                foreach (string t in tags)
                {
                    <a asp-controller="home" asp-action="tag" asp-route-sometags="@t">@t</a>
                }
            }

            @if (item.comments.Count != 0)
            {
                foreach (var com in item.comments)
                {

                    <div class="border rounded mt-1 p-1" style="line-height: 10px">
                        <p class="text-secondary" style="display: inline"><a src="\">@com.FromName</a></p><p-time post-time=@com.PostTime class="text-secondary ml-1" style="display: inline" />
                        <p class="mt-3">@com.Text</p>
                    </div>
                }
            }
            <div>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"> Удалить</a>
            </div>
            <form asp-action="Comment" asp-controller="Home">
                <input type="hidden" value=@item.Id name="comment.PostId">
                <input name="comment.Text">
                <input type="submit" value="Отправить">
            </form>
        </div>
    }
</div>