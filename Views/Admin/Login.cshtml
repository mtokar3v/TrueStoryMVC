@model TrueStoryMVC.Models.ViewModels.LoginUserModel


<h2 class="font-weight-normal text-center">Вход в панель администратора</h2>
<form asp-controller="Admin" asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input value="@User.Identity.Name" type="hidden" asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-block" value="Вход" />
    </div>
</form>